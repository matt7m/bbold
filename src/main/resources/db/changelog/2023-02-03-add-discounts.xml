<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="2023-02-03-r0czak-1" author="r0czak">
        <createTable tableName="discounts">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_discounts"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="content" type="VARCHAR(1000)"/>
            <column name="url" type="VARCHAR(255)"/>
            <column name="date" type="DATE"/>
            <column name="image_id" type="VARCHAR(255)"/>
            <column name="address_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="2023-02-03-r0czak-2" author="r0czak">
        <addForeignKeyConstraint baseColumnNames="address_id" baseTableName="discounts"
                                 constraintName="FK_DISCOUNTS_ON_ADDRESS" referencedColumnNames="id"
                                 referencedTableName="address"/>
    </changeSet>
    <changeSet id="2023-02-03-r0czak-3" author="r0czak">
        <addForeignKeyConstraint baseColumnNames="image_id" baseTableName="discounts"
                                 constraintName="FK_DISCOUNTS_ON_IMAGE" referencedColumnNames="id"
                                 referencedTableName="filedb"/>
    </changeSet>

</databaseChangeLog>